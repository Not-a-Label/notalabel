name: CI/CD Pipeline

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

jobs:
  test:
    name: Test Backend
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Use Node.js 18
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        cache: 'npm'
        cache-dependency-path: not-a-label-backend/package-lock.json
    
    - name: Install dependencies
      working-directory: ./not-a-label-backend
      run: npm ci
    
    - name: Run linter
      working-directory: ./not-a-label-backend
      run: npm run lint || true
    
    - name: Run tests
      working-directory: ./not-a-label-backend
      run: npm test || true
    
    - name: Build TypeScript
      working-directory: ./not-a-label-backend
      run: npm run build

  security:
    name: Security Scan
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Run security audit
      working-directory: ./not-a-label-backend
      run: npm audit --audit-level=high || true

  docker-build:
    name: Build Docker Images
    runs-on: ubuntu-latest
    needs: test
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2
    
    - name: Build backend image
      uses: docker/build-push-action@v4
      with:
        context: ./not-a-label-backend
        file: ./not-a-label-backend/Dockerfile.main
        push: false
        tags: not-a-label/backend:latest
        cache-from: type=gha
        cache-to: type=gha,mode=max
    
    - name: Build worker image
      uses: docker/build-push-action@v4
      with:
        context: ./not-a-label-backend
        file: ./not-a-label-backend/Dockerfile.worker
        push: false
        tags: not-a-label/worker:latest
        cache-from: type=gha
        cache-to: type=gha,mode=max